<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gestion des Messages</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex justify-center items-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-4xl">
      <!-- Tableau des messages -->
      <h2 class="text-2xl font-semibold mb-4 text-center">
        Liste des Messages
      </h2>

      <% if (messages.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-200">
              <th class="border border-gray-300 px-4 py-2">Auteur</th>
              <th class="border border-gray-300 px-4 py-2">Date CrÃ©ation</th>
              <th class="border border-gray-300 px-4 py-2">Titre</th>
              <th class="border border-gray-300 px-4 py-2">Description</th>
              <th class="border border-gray-300 px-4 py-2">Ã‰tat</th>
            </tr>
          </thead>
          <tbody>
            <% messages.forEach(function(message) { %>
            <tr class="text-center">
              <td class="border border-gray-300 px-4 py-2">
                <%= message.auteur %>
              </td>
              <td class="border border-gray-300 px-4 py-2">
                <%= message.dateCreation %>
              </td>
              <td class="border border-gray-300 px-4 py-2">
                <%= message.titre %>
              </td>
              <td class="border border-gray-300 px-4 py-2">
                <%= message.description %>
              </td>
              <td class="border border-gray-300 px-4 py-2">
                <% if (message.etat === 'en-cours') { %>
                <span class="text-yellow-500 font-bold">ðŸŸ  En cours</span>
                <% } else { %>
                <span class="text-green-600 font-bold">RÃ©solu</span>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <p class="text-center text-gray-600">
        Aucun message soumis pour le moment.
      </p>
      <% } %>

      <!-- SÃ©parateur -->
      <hr class="my-8 border-gray-400" />

      <!-- Formulaire -->
      <h1 class="text-2xl font-bold text-center mb-6">
        Ajouter un nouveau message
      </h1>

      <form action="/messages/create" method="POST" class="space-y-6">
        <div>
          <label for="auteur" class="block text-lg font-medium text-gray-700"
            >Auteur :</label
          >
          <input
            type="text"
            id="auteur"
            name="auteur"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
            required
          />
        </div>

        <div>
          <label for="titre" class="block text-lg font-medium text-gray-700"
            >Titre :</label
          >
          <input
            type="text"
            id="titre"
            name="titre"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
            required
          />
        </div>

        <div>
          <label
            for="description"
            class="block text-lg font-medium text-gray-700"
            >Description :</label
          >
          <textarea
            id="description"
            name="description"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
            required
          ></textarea>
        </div>

        <div>
          <label for="etat" class="block text-lg font-medium text-gray-700"
            >Ã‰tat :</label
          >
          <select
            id="etat"
            name="etat"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md"
          >
            <option value="en-cours">En cours</option>
            <option value="resolu">RÃ©solu</option>
          </select>
        </div>
        <div class="flex justify-center">
          <button
            type="submit"
            class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-700"
          >
            Envoyer
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
